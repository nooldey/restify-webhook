{
  "name": "restify-webhook",
  "version": "1.0.0",
  "description": "A REST API solution for common githook and simple automaticle work",
  "main": "index.js",
  "author": "Nooldey <nooldey@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "go": "yarn clear && pm2 start -l ./log/pm2.log -e ./log/error.log index.js --name 'webhooks'",
    "stop": "pm2 stop 'webhooks'",
    "clear": "pm2 flush"
  },
  "dependencies": {
    "pm2": "^2.10.3",
    "restify": "^7.1.1",
    "restify-errors": "^6.0.0",
    "yamljs": "^0.3.0"
  }
}
